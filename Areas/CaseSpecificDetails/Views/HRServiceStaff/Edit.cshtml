@model Resolve.Models.HRServiceStaff

@{
    ViewData["Title"] = "Edit Specific Details";
}
@section Scripts {
    <script type="text/javascript">
        jQuery(document).ready(function ($) {
             var MyRequestType = "@Model.RequestType";
            if (MyRequestType == "Allowance") {
                $("#AllowanceChange").show();
            }
            else {
                $("#AllowanceChange").hide();
           }
            if (MyRequestType == "Base") {
                   $("#BasePayChange").show();
               }
            else {
                   $("#BasePayChange").hide();
           }
           if (MyRequestType == "Termination") {
               $("#TerminationReason").show();
               }
           else {
               $("#TerminationReason").hide();
           }

            $("#RequestType").change(function () {
                if ($(this).find(':selected').text() == "Compensation Base Pay Change") {
                    $("#BasePayChange").show();
                    $("#AllowanceChange").hide();
                    $("#TerminationReason").hide();
                } else if ($(this).find(':selected').text() == "Compensation Allowance Change") {
                    $("#AllowanceChange").show();
                    $("#BasePayChange").hide();
                    $("#TerminationReason").hide();
                }
                else if ($(this).find(':selected').text() == "Termination") {
                    $("#AllowanceChange").hide();
                    $("#BasePayChange").hide();
                    $("#TerminationReason").show();
                }
                else {
                    $("#AllowanceChange").hide();
                    $("#BasePayChange").hide();
                    $("#TerminationReason").hide();
                }
            });
        });
    </script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}

