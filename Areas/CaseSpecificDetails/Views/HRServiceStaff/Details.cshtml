@model Resolve.Models.Case

@foreach (var item in Model.HRServiceStaff)
{
    <dl class="row">

        <dt class="col-sm-6">
            @Html.DisplayNameFor(modelItem => item.WorkerType)
        </dt>
        <dd class="col-sm-6">
            @Html.DisplayFor(modelItem => item.WorkerType)
        </dd>
        <dt class="col-sm-6">
            @Html.DisplayNameFor(modelItem => item.RequestType)
        </dt>
        <dd class="col-sm-6">
            @Html.DisplayFor(modelItem => item.RequestType)
        </dd>


        @{ string reqtype = item.RequestType.ToString(); }
        @if (@reqtype == "Base")
        {
            <dt class="col-sm-6">
                @Html.DisplayNameFor(modelItem => item.BasePayChange)
            </dt>
            <dd class="col-sm-6">
                @Html.DisplayFor(modelItem => item.BasePayChange)
            </dd>
            <dt class="col-sm-6">
                @Html.DisplayNameFor(modelItem => item.Amount)
            </dt>
            <dd class="col-sm-6">
                @Html.DisplayFor(modelItem => item.Amount)
            </dd>
        }
        @if (@reqtype == "Allowance")
        {
            <dt class="col-sm-6">
                @Html.DisplayNameFor(modelItem => item.AllowanceChange)
            </dt>
            <dd class="col-sm-6">
                @Html.DisplayFor(modelItem => item.AllowanceChange)
            </dd>
        }
        @if (@reqtype == "Termination")
        {
            <dt class="col-sm-6">
                @Html.DisplayNameFor(modelItem => item.TerminationReason)
            </dt>
            <dd class="col-sm-6">
                @Html.DisplayFor(modelItem => item.TerminationReason)
            </dd>
            <dt class="col-sm-6">
                @Html.DisplayNameFor(modelItem => item.Offboarding)
            </dt>
            <dd class="col-sm-6">
                @Html.DisplayFor(modelItem => item.Offboarding)
            </dd>
            <dt class="col-sm-6">
                @Html.DisplayNameFor(modelItem => item.LeaveWA)
            </dt>
            <dd class="col-sm-6">
                @Html.DisplayFor(modelItem => item.LeaveWA)
            </dd>
            <dt class="col-sm-6">
                @Html.DisplayNameFor(modelItem => item.ClosePosition)
            </dt>
            <dd class="col-sm-6">
                @Html.DisplayFor(modelItem => item.ClosePosition)
            </dd>
        }
        <dt class="col-sm-6">
            @Html.DisplayNameFor(modelItem => item.EmployeeName)
        </dt>
        <dd class="col-sm-6">
            @Html.DisplayFor(modelItem => item.EmployeeName)
        </dd>
        <dt class="col-sm-6">
            @Html.DisplayNameFor(modelItem => item.SupOrg)
        </dt>
        <dd class="col-sm-6">
            @Html.DisplayFor(modelItem => item.SupOrg)
        </dd>
        <dt class="col-sm-6">
            @Html.DisplayNameFor(modelItem => item.EmployeeEID)
        </dt>
        <dd class="col-sm-6">
            @Html.DisplayFor(modelItem => item.EmployeeEID)
        </dd>
        <dt class="col-sm-6">
            @Html.DisplayNameFor(modelItem => item.BudgetNumbers)
        </dt>
        <dd class="col-sm-6">
            @Html.DisplayFor(modelItem => item.BudgetNumbers)
        </dd>


        <dt class="col-sm-6">
            @Html.DisplayNameFor(modelItem => item.EffectiveStartDate)
        </dt>
        <dd class="col-sm-6">
            @Html.DisplayFor(modelItem => item.EffectiveStartDate)
        </dd>
        <dt class="col-sm-6">
            @Html.DisplayNameFor(modelItem => item.EffectiveEndDate)
        </dt>
        <dd class="col-sm-6">
            @Html.DisplayFor(modelItem => item.EffectiveEndDate)
        </dd>
        <dt class="col-sm-6">
            @Html.DisplayNameFor(modelItem => item.Note)
        </dt>
        <dd class="col-sm-6">
            @Html.DisplayFor(modelItem => item.Note)
        </dd>

    </dl>
}