@model Resolve.Models.HiringStaff

@{
    ViewData["Title"] = "Edit Specific Details";
}
@section Scripts {
    <script type="text/javascript">
        jQuery(document).ready(function ($) {
            var MyHireType = "@Model.StaffHireReason";
            var MyWorkerType = "@Model.StaffWorkerType";
            if (MyWorkerType == "Student")
            {
                $("#Student").show();
                $("#Employee").hide();
            }

            else {
                $("#Employee").show();
                $("#Student").hide();
            }
            if (MyHireType == "Replace" || MyHireType == "ReplaceNew") {
                $("#NotReplace").hide();
                $("#Replacement").show();
            }

           
           else {
                $("#NotReplace").show();
                $("#Replacement").hide();
               }
           
            $("#StaffHireReason").change(function () {
                if ($(this).find(':selected').text() == "New Position") {
                    $("#NotReplace").show();
                    $("#Replacement").hide();

                } else if ($(this).find(':selected').text() == "Replacement with New Classification") {
                    $("#NotReplace").show();
                    $("#Replacement").show();
                }
                else if ($(this).find(':selected').text() == "Other") {
                    $("#NotReplace").show();
                    $("#Replacement").hide();
                }
                else if ($(this).find(':selected').text() == "Replacement") {
                    $("#NotReplace").hide();
                    $("#Replacement").show();
                }
                else {
                    $("NotReplace").hide();
                    $("#Replacement").hide();

                }
            });
            $("#StaffWorkerType").change(function () {
                if ($(this).find(':selected').text() == "Student") {
                    $("#Student").show();
                    $("#Employee").hide();
                } else {
                    $("#Employee").show();
                    $("#Student").hide();
                }
            });
        });
    </script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}

