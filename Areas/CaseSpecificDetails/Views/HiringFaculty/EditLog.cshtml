@model Resolve.Models.HiringFacultyTracking

@{
    ViewData["Title"] = "Specific Details Edit Log";
}

<h3>Edit Log</h3>

<h4>Hiring Faculty Edit Tracking</h4>
<hr />

@{
    var logs = ViewData["Logs"] as List<HiringFacultyTracking>;

    if (logs != null)
    {
        <table class="table table-hover table-sm">
            <thead>
                <tr>
                    <th class="th-sm" style="width: 10%">Value Type</th>
                    <th class="th-sm" style="width: 20%">HireDate</th>
                    <th class="th-sm" style="width: 10%">FacHireReason</th>
                    <th class="th-sm" style="width: 10%">FacTitle</th>
                    <th class="th-sm" style="width: 10%">Department</th>
                    <th class="th-sm" style="width: 10%">Salary</th>
                    <th class="th-sm" style="width: 10%">FTE</th>
                    <th class="th-sm" style="width: 10%">BudgetNumbers</th>
                    <th class="th-sm" style="width: 10%">BudgetType</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in logs)
                {
                <tr>
                    <td><b>@item.Status</b></td>
                    <td>@item.HireDate</td>
                    <td>@item.FacHireReason</td>
                    <td>@item.FacTitle</td>
                    <td>@item.Department</td>
                    <td>@item.Salary</td>
                    <td>@item.FTE</td>
                    <td>@item.BudgetNumbers</td>
                    <td>@item.BudgetType</td>
                </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No logs found currently</p>
    }
}


