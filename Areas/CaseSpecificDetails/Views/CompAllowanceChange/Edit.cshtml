@model Resolve.Models.CompAllowanceChange
@{
    ViewData["Title"] = "Edit Specific Details";
}
@section Scripts {
    <script type="text/javascript">
        jQuery(document).ready(function ($) {
            var MyRequestType = "@Model.EWorkerType";
            if (MyRequestType == "Staff" || MyRequestType == "Staff/Student") {
                $("#staff").show();
                $("#other").hide();
                $("#stafffac").show();
                $("#scholar").hide();
            }
            else {
                $("#staff").hide();
                $("#other").show();
                $("#stafffac").hide();
                $("#scholar").show();
           }

            $("#EWorkerType").change(function () {
                if ($(this).find(':selected').text() == "Staff/Student") {
                    $("#staff").show();
                    $("#other").hide();
                    $("#stafffac").show();
                    $("#scholar").hide();
                }

                else {
                    $("#staff").hide();
                    $("#other").show();
                    $("#stafffac").hide();
                    $("#scholar").show();

                }
            });
        });
    </script>
   
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}

<h3>Edit Compensation Allowance Change</h3>
<h4>Staff/Student/Postdoctoral Scholar/Resident</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CaseID" />
            <div class="form-group" id="EWorkerType">
                <label asp-for="EWorkerType" class="control-label required-field"></label>
                <select asp-for="EWorkerType" asp-items="Html.GetEnumSelectList<EWorkerType>()" class="form-control">
                    <option selected="selected" value="">Please select</option>
                </select>
                <span asp-validation-for="EWorkerType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SupOrg" class="control-label"></label>
                <select asp-for="SupOrg" asp-items="Html.GetEnumSelectList<SupOrg>()" class="form-control">
                    <option selected="selected" value="">Please select</option>
                </select>
                <span asp-validation-for="SupOrg" class="text-danger"></span>
            </div>
            <div id="staff">
                <div class="form-group" id="HireType">
                    <label asp-for="HireType" class="control-label"></label>
                    <select asp-for="HireType" asp-items="Html.GetEnumSelectList<HireType>()" class="form-control">
                        <option selected="selected" value="">Please select</option>
                    </select>
                    <span asp-validation-for="HireType" class="text-danger"></span>
                </div>
            </div>
            <div id="other">
                <div class="form-group">
                    <label asp-for="Department" class="control-label"></label>
                    <select asp-for="Department" asp-items="Html.GetEnumSelectList<Department>()" class="form-control">
                        <option selected="selected" value="">Please select</option>
                    </select>
                    <span asp-validation-for="Department" class="text-danger"></span>
                </div>
            </div>
            <div id="stafffac">
                <div class="form-group">
                    <label asp-for="AllowanceChange" class="control-label"></label>
                    <select asp-for="AllowanceChange" asp-items="Html.GetEnumSelectList<AllowanceChange>()" class="form-control">
                        <option selected="selected" value="">Please select</option>
                    </select>
                    <span asp-validation-for="AllowanceChange" class="text-danger"></span>
                </div>
            </div>
            <div id="scholar">
                <div class="form-group">
                    <label asp-for="ScholarCompAllowanceChange" class="control-label"></label>
                    <select asp-for="ScholarCompAllowanceChange" asp-items="Html.GetEnumSelectList<ScholarCompAllowanceChange>()" class="form-control">
                        <option selected="selected" value="">Please select</option>
                    </select>
                    <span asp-validation-for="ScholarCompAllowanceChange" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Amount" class="control-label"></label>
                <input asp-for="Amount" class="form-control" />
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label required-field"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="JobTitle" class="control-label required-field"></label>
                <input asp-for="JobTitle" class="form-control" />
                <span asp-validation-for="JobTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmployeeEID" class="control-label"></label>
                <input asp-for="EmployeeEID" class="form-control" />
                <span asp-validation-for="EmployeeEID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BudgetNumbers" class="control-label"></label>
                <input asp-for="BudgetNumbers" class="form-control" />
                <span asp-validation-for="BudgetNumbers" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="EffectiveStartDate" class="control-label required-field"></label>
                <input asp-for="EffectiveStartDate" class="form-control" />
                <span asp-validation-for="EffectiveStartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EffectiveEndDate" class="control-label"></label> (<span class="text-danger">*if applicable</span>)
                <input asp-for="EffectiveEndDate" class="form-control" />
                <span asp-validation-for="EffectiveEndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DetailedDescription" class="control-label"></label>
                <textarea asp-for="DetailedDescription" class="form-control"></textarea>
                <span asp-validation-for="DetailedDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Note" class="control-label"></label>
                <textarea asp-for="Note" class="form-control"></textarea>
                <span asp-validation-for="Note" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>

        </form>
    </div>
</div>

