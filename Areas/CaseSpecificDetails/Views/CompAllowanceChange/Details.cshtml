@model Resolve.Models.Case

@foreach (var item in Model.CompAllowanceChange)
{
<dl class="row">
    <dt class="col-sm-4">
        @Html.DisplayNameFor(modelItem => item.EWorkerType)
    </dt>
    <dd class="col-sm-8">
        @Html.DisplayFor(modelItem => item.EWorkerType)
    </dd>
    @{ string workertype = item.EWorkerType.ToString(); }
    @if (@workertype == "Staff")
    {
        <dt class="col-sm-4">
            @Html.DisplayNameFor(modelItem => item.HireType)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(modelItem => item.HireType)
        </dd>

    }
    @if (@workertype == "Staff" || @workertype == "Faculty")
    {
        <dt class="col-sm-4">
            @Html.DisplayNameFor(modelItem => item.AllowanceChange)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(modelItem => item.AllowanceChange)
        </dd>
    }
    @if (@workertype == "Postdoctoral Scholar/Resident")
    {
        <dt class="col-sm-4">
            @Html.DisplayNameFor(modelItem => item.ScholarCompAllowanceChange)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(modelItem => item.ScholarCompAllowanceChange)
        </dd>
        <dt class="col-sm-4">
            @Html.DisplayNameFor(modelItem => item.Department)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(modelItem => item.Department)
        </dd>
    }

    <dt class="col-sm-4">
        @Html.DisplayNameFor(modelItem => item.Amount)
    </dt>
    <dd class="col-sm-8">
        @Html.DisplayFor(modelItem => item.Amount)
    </dd>
    <dt class="col-sm-4">
        @Html.DisplayNameFor(modelItem => item.Name)
    </dt>
    <dd class="col-sm-8">
        @Html.DisplayFor(modelItem => item.Name)
    </dd>
    <dt class="col-sm-4">
        @Html.DisplayNameFor(modelItem => item.JobTitle)
    </dt>
    <dd class="col-sm-8">
        @Html.DisplayFor(modelItem => item.JobTitle)
    </dd>    
    <dt class="col-sm-4">
        @Html.DisplayNameFor(modelItem => item.SuperOrg)
    </dt>
    <dd class="col-sm-8">
        @Html.DisplayFor(modelItem => item.SuperOrg)
    </dd>
    <dt class="col-sm-4">
        @Html.DisplayNameFor(modelItem => item.EmployeeEID)
    </dt>
    <dd class="col-sm-8">
        @Html.DisplayFor(modelItem => item.EmployeeEID)
    </dd>

    <dt class="col-sm-4">
        @Html.DisplayNameFor(modelItem => item.BudgetNumbers)
    </dt>
    <dd class="col-sm-8">
        @Html.DisplayFor(modelItem => item.BudgetNumbers)
    </dd>
    <dt class="col-sm-4">
        @Html.DisplayNameFor(modelItem => item.EffectiveStartDate)
    </dt>
    <dd class="col-sm-8">
        @Html.DisplayFor(modelItem => item.EffectiveStartDate)
    </dd>
    <dt class="col-sm-4">
        @Html.DisplayNameFor(modelItem => item.EffectiveEndDate)
    </dt>
    <dd class="col-sm-8">
        @Html.DisplayFor(modelItem => item.EffectiveEndDate)
    </dd>
    <dt class="col-sm-4">
        @Html.DisplayNameFor(modelItem => item.DetailedDescription)
    </dt>
    <dd class="col-sm-8">
        @Html.DisplayFor(modelItem => item.DetailedDescription)
    </dd>
    <dt class="col-sm-4">
        @Html.DisplayNameFor(modelItem => item.Note)
    </dt>
    <dd class="col-sm-8">
        @Html.DisplayFor(modelItem => item.Note)
    </dd>

</dl>
}