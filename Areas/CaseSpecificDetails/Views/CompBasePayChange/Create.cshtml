@model Resolve.Models.CompBasePayChange

@{
    ViewData["Title"] = "Create Specific Details";
}
@section Scripts {
    <script type="text/javascript">
        jQuery(document).ready(function ($) {
            $("#Compensation").hide();
            $("#FTEChange").hide();
            $("#Promotion").hide();
            $("#ScholarRequestType").change(function () {
                if ($(this).find(':selected').text() == "Compensation Allowance Change") {
                    $("#Compensation").show();
                    $("#FTEChange").hide();
                    $("#Promotion").hide();
                }
                else if ($(this).find(':selected').text() == "FTE Change") {
                    $("#FTEChange").show();
                    $("#Compensation").hide();
                    $("#Promotion").hide();
                }
                else if ($(this).find(':selected').text() == "Promotion") {
                    $("#Promotion").show();
                    $("#Compensation").hide();
                    $("#FTEChange").hide();
                }
                else {
                    $("#Compensation").hide();
                    $("#FTEChange").hide();
                    $("#Promotion").hide();
                }

            });
        });
    </script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}

<h3>Create Base Pay Change</h3>
<h4>Staff/Student</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
