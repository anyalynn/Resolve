@model Resolve.Models.HRServiceScholarResidentTracking

@{
    ViewData["Title"] = "Specific Details Edit Log";
}

<h1>Edit Log</h1>

<h4>HRServiceScholarResident Edit Tracking</h4>
<hr />

@{
    var logs = ViewData["Logs"] as List<HRServiceScholarResidentTracking>;

    if (logs != null)
    {
        <table class="table table-hover table-sm">
            <thead>
                <tr>
                    <th class="th-sm" style="width: 10%">Value Type</th>
                    <th class="th-sm" style="width: 10%">RequestType</th>
                    <th class="th-sm" style="width: 10%">JobProfile</th>
                    <th class="th-sm" style="width: 10%">Name</th>
                    <th class="th-sm" style="width: 10%">Department</th>
                    <th class="th-sm" style="width: 10%">BudgetNumbers</th>
                    <th class="th-sm" style="width: 10%">Step/Stipend</th>
                    <th class="th-sm" style="width: 15%">EffectiveStartDate</th>
                    <th class="th-sm" style="width: 15%">Effective End Date</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in logs)
                {
                <tr>
                    <td><b>@item.Status</b></td>
                    <td>@item.ScholarRequestType</td>
                    <td>@item.ScholarJobProfile</td>
                    <td>@item.Name</td>
                    <td>@item.Department</td>
                    <td>@item.BudgetNumbers</td>
                    <td>@item.StepStipendAllowance</td>
                    <td>@item.EffectiveStartDate</td>
                    <td>@item.EffectiveEndDate</td>
                </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No logs found currently</p>
    }
}


