@model Resolve.Models.FoodEventTracking

@{
    ViewData["Title"] = "Specific Details Edit Log";
}

<h3>Edit Log</h3>

<h4>FoodEvent Edit Tracking</h4>
<hr />

@{
    var logs = ViewData["Logs"] as List<FoodEventTracking>;

    if (logs != null)
    {
        <table class="table table-hover table-sm">
            <thead>
               
                <tr>
                    <th class="th-sm" style="width: 10%">Value Type</th>
                    <th class="th-sm" style="width: 10%">Department</th>
                    <th class="th-sm" style="width: 10%">EmployeeName</th>
                    <th class="th-sm" style="width: 10%">EventDate</th>
                    <th class="th-sm" style="width: 20%">EventDescription</th>
                    <th class="th-sm" style="width: 10%">BudgetNumbers</th>                   
                    <th class="th-sm" style="width: 10%">BudgetPurpose</th>
                    <th class="th-sm" style="width: 10%">Total</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in logs)
                {
                <tr>
                    <td><b>@item.Status</b></td>
                    <td>@item.TravelFoodDepartment</td>
                    <td>@item.EmployeeName</td>
                    <td>@item.EventDate</td>
                    <td>@item.EventDescription</td>
                    <td>@item.BudgetNumbers</td>                   
                    <td>@item.BudgetPurpose</td>
                    <td>@item.Total</td>
                </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No logs found currently</p>
    }
}


