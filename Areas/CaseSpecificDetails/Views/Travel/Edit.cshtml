@model Resolve.Models.Travel

@{
    ViewData["Title"] = "Edit Specific Details";
}
@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            $(".calc").change(function () {
                var value1 = $('#airfare').val() == '' ? 0 : parseFloat($('#airfare').val());
                var value2 = $('#transportation').val() == '' ? 0 : parseFloat($('#transportation').val());
                var value3 = $('#registration').val() == '' ? 0 : parseFloat($('#registration').val());
                var value4 = $('#hotels').val() == '' ? 0 : parseFloat($('#hotels').val());
                var value5 = $('#meals').val() == '' ? 0 : parseFloat($('#meals').val());
                var value6 = $('#other1').val() == '' ? 0 : parseFloat($('#other1').val());
                var value7 = $('#other2').val() == '' ? 0 : parseFloat($('#other2').val());
                var sum = value1 + value2 + value3 + value4 + value5 + value6 + value7;
                $('#total').val(sum);
            });
        });


    </script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}

<h3>Edit Travel Request</h3>
<hr />
<hr />

