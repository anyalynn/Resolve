@model Resolve.Models.Case

@foreach (var item in Model.Termination)
{
<dl class="row">
    <dt class="col-sm-4">
        @Html.DisplayNameFor(modelItem => item.AWorkerType)
    </dt>
    <dd class="col-sm-8">
        @Html.DisplayFor(modelItem => item.AWorkerType)
    </dd>
    @{ string workertype = item.AWorkerType.ToString(); }
    <dt class="col-sm-4">
        @Html.DisplayNameFor(modelItem => item.Name)
    </dt>
    <dd class="col-sm-8">
        @Html.DisplayFor(modelItem => item.Name)
    </dd>
    <dt class="col-sm-4">
        @Html.DisplayNameFor(modelItem => item.JobTitle)
    </dt>
    <dd class="col-sm-8">
        @Html.DisplayFor(modelItem => item.JobTitle)
    </dd>
   
    <dt class="col-sm-4">
        @Html.DisplayNameFor(modelItem => item.SuperOrg)
    </dt>
    <dd class="col-sm-8">
        @Html.DisplayFor(modelItem => item.SuperOrg)
    </dd>
    @if (@workertype == "Staff")
    {
        <dt class="col-sm-4">
            @Html.DisplayNameFor(modelItem => item.HireType)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(modelItem => item.HireType)
        </dd>
    }
    @if (@workertype != "Staff")
    {
        <dt class="col-sm-4">
            @Html.DisplayNameFor(modelItem => item.Department)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(modelItem => item.Department)
        </dd>
    }
    <dt class="col-sm-4">
        @Html.DisplayNameFor(modelItem => item.TerminationReason)
    </dt>
    <dd class="col-sm-8">
        @Html.DisplayFor(modelItem => item.TerminationReason)
    </dd>
    <dt class="col-sm-4">
        @Html.DisplayNameFor(modelItem => item.Offboarding)
    </dt>
    <dd class="col-sm-8">
        @Html.DisplayFor(modelItem => item.Offboarding)
    </dd>
    <dt class="col-sm-4">
        @Html.DisplayNameFor(modelItem => item.LeaveWA)
    </dt>
    <dd class="col-sm-8">
        @Html.DisplayFor(modelItem => item.LeaveWA)
    </dd>
    <dt class="col-sm-4">
        @Html.DisplayNameFor(modelItem => item.ClosePosition)
    </dt>
    <dd class="col-sm-8">
        @Html.DisplayFor(modelItem => item.ClosePosition)
    </dd>
    <dt class="col-sm-4">
        @Html.DisplayNameFor(modelItem => item.EmployeeEID)
    </dt>
    <dd class="col-sm-8">
        @Html.DisplayFor(modelItem => item.EmployeeEID)
    </dd>

    <dt class="col-sm-4">
        @Html.DisplayNameFor(modelItem => item.EffectiveStartDate)
    </dt>
    <dd class="col-sm-8">
        @Html.DisplayFor(modelItem => item.EffectiveStartDate)
    </dd>

    <dt class="col-sm-4">
        @Html.DisplayNameFor(modelItem => item.DetailedDescription)
    </dt>
    <dd class="col-sm-8">
        @Html.DisplayFor(modelItem => item.DetailedDescription)
    </dd>
    <dt class="col-sm-4">
        @Html.DisplayNameFor(modelItem => item.Note)
    </dt>
    <dd class="col-sm-8">
        @Html.DisplayFor(modelItem => item.Note)
    </dd>

</dl>
}