@model Resolve.Models.Termination

@{
    ViewData["Title"] = "Create Specific Details";
}
@section Scripts {
    <script type="text/javascript">
        jQuery(document).ready(function ($) {

            $("#staff").hide();
            $("#other").hide();

            $("#AWorkerType").change(function () {
                if ($(this).find(':selected').text() == "Staff/Student") {
                    $("#staff").show();
                    $("#other").hide();
                 }

                else {
                    $("#staff").hide();
                    $("#other").show();

                }
            });
        });
    </script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}

<h3>Create Termination</h3>
<h4>All Worker Types</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" id="AWorkerType">
                <label asp-for="AWorkerType" class="control-label required-field"></label>
                <select asp-for="AWorkerType" asp-items="Html.GetEnumSelectList<AWorkerType>()" class="form-control">
                    <option selected="selected" value="">Please select</option>
                </select>
                <span asp-validation-for="AWorkerType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SupOrg" class="control-label"></label>
                <select asp-for="SupOrg" asp-items="Html.GetEnumSelectList<SupOrg>()" class="form-control">
                    <option selected="selected" value="">Please select</option>
                </select>
                <span asp-validation-for="SupOrg" class="text-danger"></span>
            </div>
            <div id="staff">
                <div class="form-group" id="HireType">
                    <label asp-for="HireType" class="control-label"></label>
                    <select asp-for="HireType" asp-items="Html.GetEnumSelectList<HireType>()" class="form-control">
                        <option selected="selected" value="">Please select</option>
                    </select>
                    <span asp-validation-for="HireType" class="text-danger"></span>
                </div>
            </div>
            <div id="other">
                <div class="form-group">
                    <label asp-for="Department" class="control-label"></label>
                    <select asp-for="Department" asp-items="Html.GetEnumSelectList<Department>()" class="form-control">
                        <option selected="selected" value="">Please select</option>
                    </select>
                    <span asp-validation-for="Department" class="text-danger"></span>
                </div>
            </div>
            <div id="TerminationReason">
                <div class="form-group">
                    <label asp-for="TerminationReason" class="control-label required-field"></label>
                    <select asp-for="TerminationReason" asp-items="Html.GetEnumSelectList<TerminationReason>()" class="form-control">
                        <option selected="selected" value="">Please select</option>
                    </select>
                    <span asp-validation-for="TerminationReason" class="text-danger"></span>
                </div>

                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input data-related-item="title1" class="form-check-input" asp-for="Offboarding" /> @Html.DisplayNameFor(model => model.Offboarding)
                    </label>
                    <span asp-validation-for="Offboarding" class="text-danger"></span>
                </div>

                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input data-related-item="title1" class="form-check-input" asp-for="ClosePosition" /> @Html.DisplayNameFor(model => model.ClosePosition)
                    </label>
                    <span asp-validation-for="ClosePosition" class="text-danger"></span>
                </div>

                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input data-related-item="title1" class="form-check-input" asp-for="LeaveWA" /> @Html.DisplayNameFor(model => model.LeaveWA)
                    </label>
                    <span asp-validation-for="LeaveWA" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="EffectiveStartDate" class="control-label required-field"></label>
                <input asp-for="EffectiveStartDate" class="form-control" />
                <span asp-validation-for="EffectiveStartDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Name" class="control-label required-field"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="JobTitle" class="control-label required-field"></label>
                <input asp-for="JobTitle" class="form-control" />
                <span asp-validation-for="JobTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmployeeEID" class="control-label"></label>
                <input asp-for="EmployeeEID" class="form-control" />
                <span asp-validation-for="EmployeeEID" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <label asp-for="DetailedDescription" class="control-label"></label>
                <textarea asp-for="DetailedDescription" class="form-control"></textarea>
                <span asp-validation-for="DetailedDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Note" class="control-label"></label>
                <textarea asp-for="Note" class="form-control"></textarea>
                <span asp-validation-for="Note" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



