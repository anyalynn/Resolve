@model Resolve.Models.PerioLimitedCareTracking

@{
    ViewData["Title"] = "Specific Details Edit Log";
}

<h3>Edit Log</h3>

<h4>Perio Limited Care Edit Tracking</h4>
<hr />

@{
    var logs = ViewData["Logs"] as List<PerioLimitedCareTracking>;

    if (logs != null)
    {
        <table class="table table-hover table-sm">
            <thead>
                <tr>
                    <th class="th-sm">Value Type</th>
                    <th class="th-sm">TChart</th>
                    <th class="th-sm">Student Name</th>
                    <th class="th-sm">Patient Name</th>
                    <th class="th-sm">Complaint</th>
                    <th class="th-sm">Treatment Plan</th>
                    <th class="th-sm">Perio Exam</th>
                    <th class="th-sm">Restorative Exam</th>
                    <th class="th-sm">Prophy</th>
                    <th class="th-sm">Other Procedure</th>
                    <th>Birth Date</th>
                    <th>Patient ddress</th>
                    <th>Patient Phone</th>
                    <th>bwxrays</th>
                    <th>paxrays</th>
                    <th>Other</th>
                    <th>Note</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in logs)
                {
                <tr>
                    <td><b>@item.Status</b></td>
                    <td>@item.TChart</td>
                    <td>@item.StudentName</td>
                    <td>@item.PatientName</td>
                    <td>@item.Complaint</td>
                    <td>@item.TreatmentPlan</td>
                    <td>@item.PerioExam</td>
                    <td>@item.RestorativeExam</td>
                    <td>@item.Prophy</td>
                    <td>@item.OtherProcedure</td>
                    <td>@item.BirthDate</td>
                    <td>@item.PatientAddress</td>
                    <td>@item.PatientPhone</td>
                    <td>@item.bwxrays</td>
                    <td>@item.paxrays</td>                   
                    <td>@item.Other</td>
                    <td>@item.Note</td>
                </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No logs found currently</p>
    }
}


