@model Resolve.Models.PatientEventTracking

@{
    ViewData["Title"] = "Specific Details Edit Log";
}

<h1>Edit Log</h1>

<h4>PatientEvent Edit Tracking</h4>
<hr />

@{
    var logs = ViewData["Logs"] as List<PatientEventTracking>;

    if (logs != null)
    {
        <table class="table table-hover table-sm">
            <thead>
                <tr>
                    <th class="th-sm" style="width: 10%">Value Type</th>
                    <th class="th-sm" style="width: 10%">Event Date</th>
                    <th class="th-sm" style="width: 10%">Event Description</th>
                    <th class="th-sm" style="width: 10%">Event Location</th>
                    <th class="th-sm" style="width: 10%">Department</th>
                    <th class="th-sm" style="width: 10%">Dental Record #</th>
                    <th class="th-sm" style="width: 10%">Provder Name</th>
                    <th class="th-sm" style="width: 10%">Patient Name</th>
                    <th class="th-sm" style="width: 10%">Notified Name</th>
                    <th class="th-sm" style="width: 10%">Facts Documented?</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in logs)
                {
                <tr>
                    <td><b>@item.Status</b></td>
                    <td>@item.EventDate</td>
                    <td>@item.EventDescription</td>
                    <td>@item.EventLocation</td>
                    <td>@item.EventDepartment</td>
                    <td>@item.DentalRecordNum</td>
                    <td>@item.ProviderName</td>
                    <td>@item.PatientName</td>
                    <td>@item.NotifiedName</td>
                    <td>@item.FactsDocumented</td>
                </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No logs found currently</p>
    }
}


