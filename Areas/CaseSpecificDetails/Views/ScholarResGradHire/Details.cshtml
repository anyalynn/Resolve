@model Resolve.Models.Case

@foreach (var item in Model.ScholarResGradHire)
{
<dl class="row">

    @{ string reqtype = item.ScholarReqType.ToString(); }
    <dt class="col-sm-4">
        @Html.DisplayNameFor(modelItem => item.DWorkerType)
    </dt>
    <dd class="col-sm-8">
        @Html.DisplayFor(modelItem => item.DWorkerType)
    </dd>
    <dt class="col-sm-4">
        @Html.DisplayNameFor(modelItem => item.ScholarReqType)
    </dt>
    <dd class="col-sm-8">
        @Html.DisplayFor(modelItem => item.ScholarReqType)
    </dd>
    @{ string workertype = item.DWorkerType.ToString(); }

    @if (@workertype != "Grad")
    {
        <dt class="col-sm-4">
            @Html.DisplayNameFor(modelItem => item.ScholarJobProfile)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(modelItem => item.ScholarJobProfile)
        </dd>
    }
    @if (@workertype == "Grad")
    {
        <dt class="col-sm-4">
            @Html.DisplayNameFor(modelItem => item.GradJobProfile)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(modelItem => item.GradJobProfile)
        </dd>
    }
    <dt class="col-sm-4">
        @Html.DisplayNameFor(modelItem => item.Name)
    </dt>
    <dd class="col-sm-8">
        @Html.DisplayFor(modelItem => item.Name)
    </dd>
    <dt class="col-sm-4">
        @Html.DisplayNameFor(modelItem => item.StudentNumber)
    </dt>
    <dd class="col-sm-8">
        @Html.DisplayFor(modelItem => item.StudentNumber)
    </dd>

    <dt class="col-sm-4">
        @Html.DisplayNameFor(modelItem => item.JobTitle)
    </dt>
    <dd class="col-sm-8">
        @Html.DisplayFor(modelItem => item.JobTitle)
    </dd>
    @if (@reqtype == "Promotion")
    {
        <dt class="col-sm-4">
            @Html.DisplayNameFor(modelItem => item.NewTitle)
        </dt>
        <dd class="col-sm-8">
            @Html.DisplayFor(modelItem => item.NewTitle)
        </dd>
    }
    <dt class="col-sm-4">
        @Html.DisplayNameFor(modelItem => item.StipendAllowance)
    </dt>
    <dd class="col-sm-8">
        @Html.DisplayFor(modelItem => item.StipendAllowance)
    </dd>
    <dt class="col-sm-4">
        @Html.DisplayNameFor(modelItem => item.BudgetNumbers)
    </dt>
    <dd class="col-sm-8">
        @Html.DisplayFor(modelItem => item.BudgetNumbers)
    </dd>
   
    <dt class="col-sm-4">
        @Html.DisplayNameFor(modelItem => item.SuperOrg)
    </dt>
    <dd class="col-sm-8">
        @Html.DisplayFor(modelItem => item.SuperOrg)
    </dd>

    <dt class="col-sm-4">
        @Html.DisplayNameFor(modelItem => item.Department)
    </dt>
    <dd class="col-sm-8">
        @Html.DisplayFor(modelItem => item.Department)
    </dd>
    <dt class="col-sm-4">
        @Html.DisplayNameFor(modelItem => item.ScholarCitizenStatus)
    </dt>
    <dd class="col-sm-8">
        @Html.DisplayFor(modelItem => item.ScholarCitizenStatus)
    </dd>
    <dt class="col-sm-4">
        @Html.DisplayNameFor(modelItem => item.EffectiveDate)
    </dt>
    <dd class="col-sm-8">
        @Html.DisplayFor(modelItem => item.EffectiveDate)
    </dd>
    <dt class="col-sm-4">
        @Html.DisplayNameFor(modelItem => item.DetailedDescription)
    </dt>
    <dd class="col-sm-8">
        @Html.DisplayFor(modelItem => item.DetailedDescription)
    </dd>
    <dt class="col-sm-4">
        @Html.DisplayNameFor(modelItem => item.Note)
    </dt>
    <dd class="col-sm-8">
        @Html.DisplayFor(modelItem => item.Note)
    </dd>

</dl>
}