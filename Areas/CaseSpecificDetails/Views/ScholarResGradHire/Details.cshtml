@model Resolve.Models.Case

@foreach (var item in Model.ScholarResGradHire)
{
    <dl class="row">
        <dt class="col-sm-5">
            @Html.DisplayNameFor(modelItem => item.ScholarReqType)
        </dt>
        <dd class="col-sm-7">
            @Html.DisplayFor(modelItem => item.ScholarReqType)
        </dd>
        <dt class="col-sm-5">
            @Html.DisplayNameFor(modelItem => item.DWorkerType)
        </dt>
        <dd class="col-sm-7">
            @Html.DisplayFor(modelItem => item.DWorkerType)
        </dd>
        @{ string workertype = item.DWorkerType.ToString(); }

         <dt class="col-sm-5">
            @Html.DisplayNameFor(modelItem => item.Name)
        </dt>
        <dd class="col-sm-7">
            @Html.DisplayFor(modelItem => item.Name)
        </dd>
        <dt class="col-sm-5">
            @Html.DisplayNameFor(modelItem => item.JobTitle)
        </dt>
        <dd class="col-sm-7">
            @Html.DisplayFor(modelItem => item.JobTitle)
        </dd>
        @if (@workertype != "Grad")        {

            <dt class="col-sm-5">
                @Html.DisplayNameFor(modelItem => item.NewTitle)
            </dt>
            <dd class="col-sm-7">
                @Html.DisplayFor(modelItem => item.NewTitle)
            </dd>
            <dt class="col-sm-5">
                @Html.DisplayNameFor(modelItem => item.ScholarJobProfile)
            </dt>
            <dd class="col-sm-7">
                @Html.DisplayFor(modelItem => item.ScholarJobProfile)
            </dd>

        }
        @if (@workertype == "Grad")
        {
            <dt class="col-sm-5">
                @Html.DisplayNameFor(modelItem => item.GradJobProfile)
            </dt>
            <dd class="col-sm-7">
                @Html.DisplayFor(modelItem => item.GradJobProfile)
            </dd>
        }
        <dt class="col-sm-5">
            @Html.DisplayNameFor(modelItem => item.StipendAllowance)
        </dt>
        <dd class="col-sm-7">
            @Html.DisplayFor(modelItem => item.StipendAllowance)
        </dd>
        <dt class="col-sm-5">
            @Html.DisplayNameFor(modelItem => item.BudgetNumbers)
        </dt>
        <dd class="col-sm-7">
            @Html.DisplayFor(modelItem => item.BudgetNumbers)
        </dd>
        <dt class="col-sm-5">
            @Html.DisplayNameFor(modelItem => item.SupOrg)
        </dt>
        <dd class="col-sm-7">
            @Html.DisplayFor(modelItem => item.SupOrg)
        </dd>

        <dt class="col-sm-5">
            @Html.DisplayNameFor(modelItem => item.Department)
        </dt>
        <dd class="col-sm-7">
            @Html.DisplayFor(modelItem => item.Department)
        </dd>
        <dt class="col-sm-5">
            @Html.DisplayNameFor(modelItem => item.EffectiveDate)
        </dt>
        <dd class="col-sm-7">
            @Html.DisplayFor(modelItem => item.EffectiveDate)
        </dd>
        <dt class="col-sm-5">
            @Html.DisplayNameFor(modelItem => item.DetailedDescription)
        </dt>
        <dd class="col-sm-7">
            @Html.DisplayFor(modelItem => item.DetailedDescription)
        </dd>
        <dt class="col-sm-5">
            @Html.DisplayNameFor(modelItem => item.Note)
        </dt>
        <dd class="col-sm-7">
            @Html.DisplayFor(modelItem => item.Note)
        </dd>

    </dl>
}