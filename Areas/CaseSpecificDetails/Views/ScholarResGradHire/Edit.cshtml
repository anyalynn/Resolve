@model Resolve.Models.ScholarResGradHire

@{
    ViewData["Title"] = "Edit Specific Details";
}
@section Scripts {
    <script type="text/javascript">
        jQuery(document).ready(function ($) {
            var MyRequestType = "@Model.DWorkerType";
            if (MyRequestType == "Graduate Student" || MyRequestType == "Grad") {
                $("#gradstudent").show();
                $("#scholar").hide();
            }
            else {
                $("#gradstudent").hide();
                $("#scholar").show();
           }

            $("#AWorkerType").change(function () {
                if ($(this).find(':selected').text() == "Graduate Student") {
                    $("#gradstudent").show();
                    $("#scholar").hide();
                }

                else {
                    $("#gradstudent").hide();
                    $("#scholar").show();

                }
            });
        });
    </script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}
<h3>Edit Hire/Rehire/Promotion Request</h3>
<h4>Postdoctoral Scholar/Resident/Graduate Student</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
