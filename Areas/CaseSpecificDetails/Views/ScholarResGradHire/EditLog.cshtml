@model Resolve.Models.ScholarResGradHireTracking

@{
    ViewData["Title"] = "Specific Details Edit Log";
}

<h3>Edit Log</h3>

<h4>Postdoctoral Scholar/ Resident-Graduate Student Hire/ Rehire/ Promotion Edit Tracking</h4>
   

<hr />

@{
    var logs = ViewData["Logs"] as List<ScholarResGradHireTracking>;

    if (logs != null)
    {
        <table class="table table-hover table-sm">
            <thead>
                <tr>
                    <th class="th-sm">Value Type</th>
                    <th class="th-sm">Worker Type</th>
                    <th class="th-sm">Request Type</th>
                    <th class="th-sm">Scholar Profile</th>
                    <th class="th-sm">Grad Profile</th>
                    <th class="th-sm">Name</th>
                    <th class="th-sm">Sup Org</th>
                    <th class="th-sm">Department</th>
                    <th class="th-sm">Budget Numbers</th>
                    <th class="th-sm">Stipend/ Allowance</th>
                    <th class="th-sm">Effective Date</th>
                    <th class="th-sm">Description</th>
                    <th class="th-sm">Note</th>

                </tr>
            </thead>
            <tbody>
                @foreach (var item in logs)
                {
                <tr>
                    <td><b>@item.Status</b></td>
                    <td>@item.DWorkerType</td>
                    <td>@item.ScholarReqType</td>
                    <td>@item.ScholarJobProfile</td>
                    <td>@item.GradJobProfile</td>
                    <td>@item.Name</td>
                    <td>@item.SupOrg</td>
                    <td>@item.Department</td>
                    <td>@item.BudgetNumbers</td>
                    <td>@item.StipendAllowance</td>
                    <td>@item.EffectiveDate</td>
                    <td>@item.DetailedDescription</td>
                    <td>@item.Note</td>

                </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No logs found currently</p>
    }
}


