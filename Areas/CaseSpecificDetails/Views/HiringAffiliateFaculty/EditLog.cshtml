@model Resolve.Models.HiringAffiliateFacultyTracking

@{
    ViewData["Title"] = "Specific Details Edit Log";
}

<h3>Edit Log</h3>

<h4>HiringAffiliateFaculty Edit Tracking</h4>
<hr />

@{
    var logs = ViewData["Logs"] as List<HiringAffiliateFacultyTracking>;

    if (logs != null)
    {
        <table class="table table-hover table-sm">
            <thead>
                <tr>
                    <th class="th-sm" style="width: 10%">Value Type</th>
                    <th class="th-sm" style="width: 10%">HireDate</th>
                    <th class="th-sm" style="width: 20%">Name</th>
                    <th class="th-sm" style="width: 20%">FacAffiliateTitle</th>
                    <th class="th-sm" style="width: 20%">Department</th>
                    <th class="th-sm" style="width: 20%">Note</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in logs)
                {
                <tr>
                    <td><b>@item.Status</b></td>
                    <td>@item.HireDate</td>
                    <td>@item.Name</td>
                    <td>@item.FacAffiliateTitle</td>
                    <td>@item.Department</td>
                    <td>@item.Note</td>
                </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No logs found currently</p>
    }
}


