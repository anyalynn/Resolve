@model Resolve.Models.HRServiceFaculty

@{
    ViewData["Title"] = "Create Specific Details";
}
@section Scripts {
    <script type="text/javascript">
        jQuery(document).ready(function ($) {
           
            $("#TerminationReason").hide();
            $("#FTEChange").hide();
            $("#MoveWorker").hide();
            $("#FacRequestType").change(function () {               
               if ($(this).find(':selected').text() == "Termination") {
                    $("#TerminationReason").show();
                    $("#FTEChange").hide();
                    $("#MoveWorker").hide(); $("#TerminationReason").show();
                }
                else if ($(this).find(':selected').text() == "FTE Change") {
                    $("#FTEChange").show();
                    $("#TerminationReason").hide();
                    $("#MoveWorker").hide();
                }
                else if ($(this).find(':selected').text() == "Move Worker") {
                    $("#MoveWorker").show();
                    $("#TerminationReason").hide();
                    $("#FTEChange").hide();
                }
                else {
                    $("#TerminationReason").hide();
                    $("#FTEChange").hide();
                    $("#MoveWorker").hide();
                }
            });
        });
    </script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}

<h3>Create HR Service Request</h3>
<h4>Faculty</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group">
                <label asp-for="FacRequestType" class="control-label required-field"></label>
                <select asp-for="FacRequestType" asp-items="Html.GetEnumSelectList<FacRequestType>()" class="form-control">
                    <option selected="selected" value="">Please select</option>
                </select>
                <span asp-validation-for="FacRequestType" class="text-danger"></span>
            </div>

            <div id="FTEChange">
                <div class="form-group">
                    <label asp-for="CurrentFTE" class="control-label"></label>
                    <input asp-for="CurrentFTE" class="form-control" />
                    <span asp-validation-for="CurrentFTE" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ProposedFTE" class="control-label"></label>
                    <input asp-for="ProposedFTE" class="form-control" />
                    <span asp-validation-for="ProposedFTE" class="text-danger"></span>
                </div>
            </div>
            <div id="MoveWorker">
                <div class="form-group">
                    <label asp-for="SupOrg" class="control-label"></label>
                    <select asp-for="SupOrg" asp-items="Html.GetEnumSelectList<SupOrg>()" class="form-control">
                        <option selected="selected" value="">Please select</option>
                    </select>
                    <span asp-validation-for="SupOrg" class="text-danger"></span>
                </div>
            </div>
            <div id="TerminationReason">
                <div class="form-group">
                    <label asp-for="TerminationReason" class="control-label"></label>
                    <select asp-for="TerminationReason" asp-items="Html.GetEnumSelectList<TerminationReason>()" class="form-control">
                        <option selected="selected" value="">Please select</option>
                    </select>
                    <span asp-validation-for="TerminationReason" class="text-danger"></span>
                </div>
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input data-related-item="title1" class="form-check-input" asp-for="Offboarding" /> @Html.DisplayNameFor(model => model.Offboarding)
                    </label>
                    <span asp-validation-for="Offboarding" class="text-danger"></span>
                </div>
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input data-related-item="title1" class="form-check-input" asp-for="ClosePosition" /> @Html.DisplayNameFor(model => model.ClosePosition)
                    </label>
                    <span asp-validation-for="ClosePosition" class="text-danger"></span>
                </div>
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input data-related-item="title1" class="form-check-input" asp-for="LeaveWA" /> @Html.DisplayNameFor(model => model.LeaveWA)
                    </label>
                    <span asp-validation-for="LeaveWA" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Department" class="control-label required-field"></label>
                <select asp-for="Department" asp-items="Html.GetEnumSelectList<Department>()" class="form-control">
                    <option selected="selected" value="">Please select</option>
                </select>
                <span asp-validation-for="Department" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmployeeName" class="control-label required-field"></label>
                <input asp-for="EmployeeName" class="form-control" />
                <span asp-validation-for="EmployeeName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmployeeEID" class="control-label required-field"></label>
                <input asp-for="EmployeeEID" class="form-control" />
                <span asp-validation-for="EmployeeEID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="JobTitle" class="control-label"></label>
                <input asp-for="JobTitle" class="form-control" />
                <span asp-validation-for="JobTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Salary" class="control-label"></label> (<span class="text-danger">
                    *EndDate, FTE, Move
                </span>)
                <input asp-for="Salary" class="form-control" />
                <span asp-validation-for="Salary" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BudgetNumbers" class="control-label"></label>
                <input asp-for="BudgetNumbers" class="form-control" />
                <span asp-validation-for="BudgetNumbers" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EffectiveStartDate" class="control-label required-field"></label>
                <input asp-for="EffectiveStartDate" class="form-control" />
                <span asp-validation-for="EffectiveStartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EffectiveEndDate" class="control-label"> </label> (<span class="text-danger">*if applicable</span>)
                <input asp-for="EffectiveEndDate" class="form-control" />
                <span asp-validation-for="EffectiveEndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DetailedDescription" class="control-label"></label>
                <textarea asp-for="DetailedDescription" class="form-control"></textarea>
                <span asp-validation-for="DetailedDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Note" class="control-label"></label>
                <textarea asp-for="Note" class="form-control"></textarea>
                <span asp-validation-for="Note" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
        
    </div>
</div>