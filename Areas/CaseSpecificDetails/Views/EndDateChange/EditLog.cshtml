@model Resolve.Models.EndDateChangeTracking

@{
    ViewData["Title"] = "Specific Details Edit Log";
}

<h3>Edit Log</h3>

<h4>EndDateChange Edit Tracking</h4>
<hr />

@{
    var logs = ViewData["Logs"] as List<EndDateChangeTracking>;

    if (logs != null)
    {
    <table class="table table-hover table-sm">
        <thead>
            <tr>
                <th class="th-sm" style="width: 10%">Value Type</th>
                <th class="th-sm" style="width: 10%">Worker Type</th>
                <th class="th-sm" style="width: 10%">Hire Type</th>
                <th class="th-sm" style="width: 10%">Name</th>
                <th class="th-sm" style="width: 10%">Job Title</th>
                <th class="th-sm" style="width: 10%">EID</th>
                <th class="th-sm" style="width: 10%">Department</th>
                <th class="th-sm" style="width: 10%">SupOrg</th>
                <th class="th-sm" style="width: 10%">Budget Numbers</th>
                <th class="th-sm" style="width: 10%">Effective Start Date</th>
                <th class="th-sm" style="width: 10%">Effective End Date</th>
                <th class="th-sm" style="width: 10%">Description</th>
                <th class="th-sm" style="width: 10%">Note</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in logs)
            {
            <tr>
                <td><b>@item.Status</b></td>
                <td>@item.AWorkerType</td>
                <td>@item.HireType</td>
                <td>@item.Name</td>
                <td>@item.JobTitle</td>
                <td>@item.EmployeeEID</td>
                <td>@item.Department</td>
                <td>@item.SupOrg</td>
                <td>@item.BudgetNumbers</td>
                <td>@item.EffectiveStartDate</td>
                <td>@item.EffectiveEndDate</td>
                <td>@item.DetailedDescription</td>
                <td>@item.Note</td>
            </tr>
            }
        </tbody>
    </table>
    }
    else
    {
        <p>No logs found currently</p>
    }
}


