@model Resolve.Models.AxiumFeeSchedule

@{
    ViewData["Title"] = "Create Specific Details";
}

<h3>Create axiUm Fee Schedule Request</h3>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div class="form-group">
                <label asp-for="AxiumSchedRequestType" class="control-label required-field"></label>
                <select asp-for="AxiumSchedRequestType" asp-items="Html.GetEnumSelectList<AxiumSchedRequestType>()" class="form-control">
                    <option selected="selected" value="">Please select</option>
                </select>
                <span asp-validation-for="AxiumSchedRequestType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AxiumScheduleType" class="control-label required-field"></label>
                <select asp-for="AxiumScheduleType" asp-items="Html.GetEnumSelectList<AxiumScheduleType>()" class="form-control">
                    <option selected="selected" value="">Please select</option>
                </select>
                <span asp-validation-for="AxiumScheduleType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AxiumCodeType" class="control-label required-field"></label>
                <select asp-for="AxiumCodeType" asp-items="Html.GetEnumSelectList<AxiumCodeType>()" class="form-control">
                    <option selected="selected" value="">Please select</option>
                </select>
                <span asp-validation-for="AxiumCodeType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Fee" class="control-label required-field"></label>
                <input asp-for="Fee" class="form-control" />
                <span asp-validation-for="Fee" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProcedureCode" class="control-label required-field"></label>
                <input asp-for="ProcedureCode" class="form-control" />
                <span asp-validation-for="ProcedureCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProdCodeDescription" class="control-label"></label> (<span class="text-danger">*< 60 characters</span>)
                <input asp-for="ProdCodeDescription" class="form-control" />
                <span asp-validation-for="ProdCodeDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Justification" class="control-label required-field"></label>
                <textarea asp-for="Justification" class="form-control"></textarea>
                <span asp-validation-for="Justification" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Site" class="control-label"></label>
                <select asp-for="Site" asp-items="Html.GetEnumSelectList<Site>()" class="form-control">
                    <option selected="selected" value="">Please select</option>
                </select>
                <span asp-validation-for="Site" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input data-related-item="title1" class="form-check-input" asp-for="UnitsFactored" /> @Html.DisplayNameFor(model => model.UnitsFactored)
                </label>
                <span asp-validation-for="UnitsFactored" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
       
    </div>
</div>