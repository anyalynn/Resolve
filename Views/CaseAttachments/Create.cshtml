@model Resolve.ViewModels.CaseAttachmentCreateViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>CaseAttachment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form enctype="multipart/form-data" asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CaseID" class="control-label"></label>
                <select asp-for="CaseID" class="form-control" asp-items="ViewBag.CaseID"></select>
            </div>
            <div class="form-group">
                <label asp-for="Attachment" class="control-label"></label>
                    <div class="custom-file">
                        <input asp-for="Attachment" class="form-control custom-file-input">
                        <label class="custom-file-label">Choose File...</label>
                    </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>

            @section Scripts {
                <script>
            $(document).ready(function () {
                $('.custom-file-input').on("change", function () {
                    var fileName = $(this).val().split("\\").pop();
                    $(this).next('.custom-file-label').html(fileName);
                });
            });
                </script>
            }

        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

