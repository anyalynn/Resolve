@model IEnumerable<Resolve.Models.LocalUser>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Local Users</h1>
<a asp-action="Create">New User</a>        

<table id="dt_filter_select_general" class="table table-sm">
    <thead>
        <tr>
            <th scope="col">First Name</th>
            <th scope="col">Last Name</th>
            <th scope="col">UW Net ID</th>
            <th scope="col">Email ID</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EmailID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LocalUserID)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.LocalUserID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.LocalUserID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.LocalUserID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <th scope="col">First Name</th>
            <th scope="col">Last Name</th>
            <th scope="col">UW Net ID</th>
            <th scope="col">Email ID</th>
        </tr>
    </tfoot>
</table>
