@model Resolve.Models.LocalGroup

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>LocalGroup</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="LocalGroupID" />
            <div class="form-group">
                <label asp-for="GroupName" class="control-label"></label>
                <input asp-for="GroupName" class="form-control" />
                <span asp-validation-for="GroupName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GroupDescription" class="control-label"></label>
                <textarea placeholder="Short Group Description" asp-for="GroupDescription" class="form-control"></textarea>
                <span asp-validation-for="GroupDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LocalUserID" class="control-label"></label>
                <select asp-for="LocalUserID" class="form-control" asp-items="ViewBag.LocalUserID"></select>
                <span asp-validation-for="LocalUserID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
